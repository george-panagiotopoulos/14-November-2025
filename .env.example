# TravelHub Environment Configuration Example
# Copy this file to .env and fill in your values

# Server Configuration
FRONTEND_PORT=8787
BACKEND_PORT=8000

# Application URLs
FRONTEND_URL=http://localhost:8787
BACKEND_URL=http://localhost:8000

# API Configuration
API_BASE_URL=http://localhost:8000/api

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info

# Session Configuration
SESSION_TIMEOUT=3600
TOKEN_EXPIRY=86400

# Feature Flags
ENABLE_REVIEWS=true
ENABLE_BOOKINGS=true
ENABLE_PROFILE=true

# Third-party Services (Add your keys here)
# PAYMENT_API_KEY=your_payment_key_here
# MAPS_API_KEY=your_maps_key_here
# ANALYTICS_ID=your_analytics_id_here
